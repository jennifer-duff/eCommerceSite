                <input type = 'radio' id = 'XS' value = 'XS' name = 'size' class = 'sizeBtn'>
                
                <label class = 'sizeLabels' for = 'S'>S</label>
                <input type = 'radio' id = 'S' value = 'S' name = 'size' class = 'sizeBtn'>
                
                <label class = 'sizeLabels' for = 'M'>M</label>
                <input type = 'radio' id = 'M' value = 'M' name = 'size' class = 'sizeBtn'>
                
                <label class = 'sizeLabels' for = 'L'>L</label>
                <input type = 'radio' id = 'L' value = 'L' name = 'size' class = 'sizeBtn'>
                
                <label class = 'sizeLabels' for = 'XL'>XL</label>
                <input type = 'radio' id = 'XL' value = 'XL' name = 'size' class = 'sizeBtn'>
                
            </div>
            
            <button id = 'addToBag'>Add to Bag</button>

